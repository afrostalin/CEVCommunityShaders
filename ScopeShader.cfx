#define gNumImpactDecals		8
#define ResInfoImpactDecal	float2(2048.0f, 1024.0f)
#define EXTRA_IMPACT_DECALS	1

#define gNumImpactDecalElems 2
float4 gImpactDecals[gNumImpactDecals * gNumImpactDecalElems];

